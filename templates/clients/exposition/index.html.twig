{% extends 'base.html.twig' %}
{% block body %}

    {% include ('partials/navbar.html.twig') %} 

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Poster</th>
                <th>Titreexpo</th>
                <th>Descriptionexpofr</th>
                <th>Descriptionexpoen</th>
                <th>Descriptionexpocn</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Nbvisiters</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exposition in expositions %}
            <tr>
                <td>{{ exposition.id }}</td>
                <td>{{ exposition.poster }}</td>
                <td>{{ exposition.titreexpo }}</td>
                <td>{{ exposition.descriptionexpofr }}</td>
                <td>{{ exposition.descriptionexpoen }}</td>
                <td>{{ exposition.descriptionexpocn }}</td>
                <td>{{ exposition.datedebut ? exposition.datedebut|date('Y-m-d') : '' }}</td>
                <td>{{ exposition.datefin ? exposition.datefin|date('Y-m-d') : '' }}</td>
                <td>{{ exposition.nbvisiters }}</td>
                <td>
                    <a href="{{ path('exposition_show', {'id': exposition.id}) }}">show</a>
                    <a href="{{ path('exposition_edit', {'id': exposition.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('exposition_new') }}">Create new</a>
{% endblock %}



