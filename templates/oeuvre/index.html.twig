{% extends 'base.html.twig' %}

{% block title %}Oeuvre index{% endblock %}

{% block body %}
{% include ('partials/visitnavbar.html.twig') %} 



{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<a href="{{ path('oeuvre_new') }}" class="btn btn-primary">Create new</a>
{% endif %}

<div class="container-fluid justify-content-center">
    <div class="row mt-3 justify-content-center">
            {% for oeuvre in oeuvres %}
        <div class="col-lg-2">
                <div class="card mb-3 ">                        
                        <img style="height: 200px; width: 100%; display: block;" src="/uploads/img/{{ oeuvre.img }}" alt="Card image" class="img-fluid">                   
                      
                    <div class="card-body">  
                        <p class="card-text text-white">{{ oeuvre.titre }}</p>                        
                        <a href="{{ path('oeuvre_show', {'id': oeuvre.id}) }}" class="card-link">En savoir plus</a>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="{{ path('oeuvre_edit', {'id': oeuvre.id}) }}" class="card-link">Editer</a>
                        {% endif %}
                    </div>     
                </div>                    
        </div>
        {% else %}
        <tr>
            <td colspan="12">no records found</td>
        </tr>
        {% endfor %}
    </div>
</div>





 {% include ('partials/footer.html.twig') %} 


{% endblock %}

