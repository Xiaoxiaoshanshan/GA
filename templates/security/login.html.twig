{% extends 'base.html.twig' %}

{% block body %}    
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #} 
<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Login Form -->
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h3 class="mb-3 mt-4 font-weight-normal">Bienvenue grand angle</h3>
        <h5 class="mb-3 mt-4 font-weight-normal">Connectez Vous</h5> 

        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" value="{{ last_username }}" id="inputEmail" class="fadeIn second" name="email" placeholder="Email" required>
        
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="fadeIn third" name="password" placeholder="Password" required>
        
        <input type="submit" class="fadeIn fourth" value="Log In">

        <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="underlineHover" href="#">Forgot Password?</a>
    </div>

  </div>
</div>
{% endblock %}
